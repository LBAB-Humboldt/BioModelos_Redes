.minus1024 {
	width: 100%;
	height: 100%;
	background-image: url(<%= asset_path 'fondobla.jpg' %>);
	position: absolute;
	z-index: 20000;
}

.minus1024 img {
	width: 100%;
	margin: auto;
}

}
/* if screen size gets wider than 1024 */

@media screen and (min-width:700px) {

	.variables {
		width: 700px;
	}

	.variable3 {
		float: left;
	}

	.var1b {
		float: left;
		margin-left:-webkit-calc(100% - 600px);
		margin-left: -moz-calc(100% - 600px);
		margin-left: calc(100% - 600px);
	}

}

@media screen and (max-width:1023px) {

.plus1024, .leaflet-control-container {
	display: none;
}

#map {
	display: none;
}

}

@media screen and (min-width:1024px) {

.variables {
	width: 925px;
}

.variable1 {
	float: left;
	margin-bottom: 50px;
	margin-left: 1%;
}

.variable2 {
	float: left;
	margin: 0 1% 0 2%;
}

.variable3 {
	float: left;
}

.var2 {
	height: 255px;
	margin-bottom: 0;
}

	.minus1024 {
		display:none;
	}

}
