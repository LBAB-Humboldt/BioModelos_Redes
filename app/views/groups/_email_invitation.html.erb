<div>
  <%= form_tag({controller: "groups", action: "email_invitation"}, method: "post", class: "nifty_form") do  %>
      <table>
        <tr><td rowspan="7"><h3>Invitar a un amigo a unirse al grupo </h3></td></tr>
        <tr><td><%= hidden_field_tag :id, @group.id %></td></tr>
        <tr><td><%= email_field_tag :email, '', :placeholder => 'Email' %></td></tr>
        <tr><td><%= text_field_tag :name, '', :placeholder => 'Nombre de Amigo' %></td></tr>
        <tr><td><%= text_area_tag :message, nil, :rows => 4 %></td></tr>
        <tr><td><%= submit_tag 'Enviar' %></td></tr>
      </table>
  <% end %>

</div>
<hr/>